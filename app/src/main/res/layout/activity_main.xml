<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvCinepolisAltama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3186C4"
        android:text="@string/cine"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvCapitalCine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:text="@string/capital"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/bnComprar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvCapitalCine"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#FFCF3F"
        android:text="Comprar Boletos"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/tvCapitalCine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.822" />

    <TextView
        android:id="@+id/tvB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/ivHSM"
        android:layout_marginTop="200dp"
        android:layout_marginRight="-30dp"
        android:background="#AEB5BA"
        android:hapticFeedbackEnabled="true"
        android:text="B"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/tvduracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/ivHSM"
        android:layout_marginTop="200dp"
        android:layout_marginRight="-120dp"
        android:background="@color/black"
        android:hapticFeedbackEnabled="true"
        android:text="125 min"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/tvCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/ivHSM"
        android:layout_marginTop="200dp"
        android:layout_marginRight="-210dp"
        android:background="#55A6DF"
        android:hapticFeedbackEnabled="true"
        android:text="Musical"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"></TextView>

    <ImageView
        android:id="@+id/ivHSM"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_below="@id/tvCinepolisAltama"
        android:layout_marginTop="43dp"
        app:srcCompat="@drawable/hsm"></ImageView>

    <Spinner
        android:id="@+id/spHorarios"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/bnComprar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="68dp"
        android:entries="@array/horarios"></Spinner>

    <TextView
        android:id="@+id/tvSeleccionarHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/spHorarios"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="Por favor seleccione un horario"
        android:textSize="19sp"
        android:textStyle="bold|italic"></TextView>

    <TextView
        android:id="@+id/tvHSM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/ivHSM"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="-200dp"
        android:text="High School Musical"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/tvHSM2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/ivHSM"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="-277dp"
        android:text="High School Musical (EUA, 2006"
        android:textColor="#757575"
        android:textSize="19dp"
        android:textStyle="bold"></TextView>

</RelativeLayout>